<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Renamer.UI.Views.FolderPickerPage">
    <VerticalStackLayout Padding="20" Spacing="15">
        <StackLayout Orientation="Horizontal" HorizontalOptions="End">
            <Label Text="Dark Mode" VerticalOptions="Center" Margin="0,0,10,0"/>
            <Switch x:Name="DarkModeSwitch" Toggled="OnDarkModeToggled"/>
        </StackLayout>
        <Entry x:Name="FolderEntry" Placeholder="Select folder" Text="{Binding SelectedFolder}" IsReadOnly="True"/>
        <Button Text="Browse" Command="{Binding BrowseCommand}"/>
        <Button Text="Next" Command="{Binding NextCommand}"/>
    </VerticalStackLayout>
</ContentPage>
