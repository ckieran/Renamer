<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Renamer.UI.Views.FolderPickerPage"
             Title="Select Folder">

    <VerticalStackLayout Padding="20">
        <Button Text="Pick Folder" x:Name="PickBtn" Clicked="OnPickFolderClicked" />
        <Label x:Name="SelectedPathLabel" Text="No folder selected" />
        <Button Text="Generate Plan" x:Name="GenerateBtn" Clicked="OnGenerateClicked" IsEnabled="False" />
    </VerticalStackLayout>
</ContentPage>
