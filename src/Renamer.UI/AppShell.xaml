<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Renamer.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Renamer.UI"
    Title="Renamer.UI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent Title="FolderPicker" ContentTemplate="{DataTemplate local:Views.FolderPickerPage}" Route="FolderPicker" />
    <ShellContent Title="PlanView" ContentTemplate="{DataTemplate local:Views.PlanViewPage}" Route="PlanView" />

</Shell>
